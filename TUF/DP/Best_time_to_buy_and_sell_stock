class Solution {
    public int stockBuySell(int[] arr, int n) {
       int min = arr[0];


       int max = Integer.MIN_VALUE;
       for(int ind=1;ind<n;ind++){
            int diff = arr[ind]-min;
            max = Math.max(max,diff);
            min = Math.min(min,arr[ind]);
       }


        if(max < 0){
            return 0;
        }
        return max;
    }
}