class Solution {
    public int search(int[] arr, int x) {

        int n = arr.length;

        int l = 0;
        int r = n-1;

        while(l <= r){
            int mid = (l+r)/2;

            if(arr[mid] == x){
                return mid;
            }else if(x < arr[mid]){
                r = mid-1;
            }else{
                l = mid+1;
            }
        }

        return -1;


    }
}