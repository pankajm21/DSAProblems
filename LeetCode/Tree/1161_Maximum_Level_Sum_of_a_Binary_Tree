/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int maxLevelSum(TreeNode root) {
        TreeNode node = root;

        return tr(node);

    }

    int tr(TreeNode node){
        Queue<TreeNode> qu = new LinkedList<>();
        qu.add(node);

        int cnt = 0;

        long max = Long.MIN_VALUE;
        int maxi = 0;
        while(!qu.isEmpty()){
            int len = qu.size();
            cnt++;
            long sum = 0;
            for(int ind=0;ind<len;ind++){
                node = qu.remove();
                sum += node.val;
                if(node.left != null){
                    qu.add(node.left);
                }
                if(node.right != null){
                    qu.add(node.right);
                }

            }
            if(max < sum){
                max = sum;
                maxi = cnt;
            }
        }

        return maxi;



    }
}


