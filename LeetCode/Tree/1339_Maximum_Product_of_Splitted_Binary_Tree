/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    long max = 0;
    public int maxProduct(TreeNode root) {

        TreeNode node = root;
        long tsum = findSum(node);
        node = root;
        tr(node,tsum);

        return (int)(max%1000000007);
    }

    long tr(TreeNode node,long tsum){
        if(node == null){
            return 0;
        }

        long lsum = tr(node.left,tsum);
        long rsum = tr(node.right,tsum);

        long subsum = lsum+rsum+node.val;

        long diff = tsum-subsum;
        max = Math.max(max,(subsum*diff));

        return subsum;
    }

    long findSum(TreeNode node){

        if(node == null){
            return 0;
        }

        long lsum = findSum(node.left);
        long rsum = findSum(node.right);

        return node.val+lsum+rsum;
    }
}